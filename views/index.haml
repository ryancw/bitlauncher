!!! 5
%html
  %head
    %title= "Bitnami Wordpress Deploy"
    %script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
  %body
    %h1 Bitnami Wordpress Deployer
    %h2 Enter EC2 credentials and press create to deploy a Bitnami Wordpress instance
    %form{id: "create"}
      %label{:for => "access-key"} Amazon Access Key:
      %input{type: "text", name: "access-key", id: "access-key"}
      %label{:for => "secret-key"} Amazon Secret Key:
      %input{type: "password", name:  "secret-key", id: "secret-key"}
      %input{:type => "submit", :value => "Create", :class => "button", id: "create-btn"}
    %div.status
      %ul{id: "instance-info"}
        %li Application name:
        %li{id: 'stack-name'}
        %li Application status:
        %li{id: 'status'}
        %li{id: 'app-url'}
        %input{type: 'submit', value: 'Stop instance', :class => 'button', id: 'stop-btn', style: 'display:none;'}

    %script(src="/bitlauncher.js")

